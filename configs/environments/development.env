# =============================================================================
# 🛠️ Development Environment Configuration
# =============================================================================
ENV=development
APP_NAME="Football Prediction System (Dev)"
APP_VERSION="3.0.0-dev"
DEBUG=true
LOG_LEVEL=debug

# API配置
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS配置 - Permissive for development
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000", "http://127.0.0.1:8080"]
CORS_CREDENTIALS=true

# =============================================================================
# 🗄️ 数据库配置 - Development
# =============================================================================
DATABASE_URL=postgresql://postgres:dev_password@localhost:5432/football_dev
POSTGRES_DB=football_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password

# 测试数据库
TEST_DATABASE_URL=postgresql://postgres:test@localhost:5432/football_test

# =============================================================================
# 🚀 缓存配置 - Development
# =============================================================================
REDIS_URL=redis://localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=

# 开发环境缓存TTL较短，便于调试
CACHE_TTL_SHORT=60       # 1分钟
CACHE_TTL_MEDIUM=300     # 5分钟  
CACHE_TTL_LONG=1800      # 30分钟

# =============================================================================
# 🔐 安全配置 - Development
# =============================================================================
SECRET_KEY=dev-secret-key-not-for-production-use-only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120  # Longer for dev convenience

# API密钥 - Development/Test keys
FOOTBALL_DATA_API_KEY=dev_football_data_api_key
OPENAI_API_KEY=dev_openai_api_key

# =============================================================================
# 📊 监控配置 - Development
# =============================================================================
OTEL_SERVICE_NAME=football-predict-api-dev
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# 🤖 机器学习配置 - Development
# =============================================================================
MODEL_PATH=./models/dev-artifacts
MODEL_VERSION=latest-dev
MODEL_RETRAIN_INTERVAL_HOURS=1  # Frequent retraining for testing

# 特征工程 - Reduced for faster development
FEATURE_WINDOW_DAYS=30
MIN_MATCHES_FOR_PREDICTION=3

# =============================================================================
# 📦 数据流配置 - Development
# =============================================================================
PREFECT_API_URL=http://localhost:4200/api
PREFECT_LOGGING_LEVEL=DEBUG

DATA_UPDATE_INTERVAL_MINUTES=5  # Frequent updates for testing
MAX_CONCURRENT_REQUESTS=5

# =============================================================================
# 🐳 Docker配置 - Development
# =============================================================================
COMPOSE_PROJECT_NAME=football-predict-dev
DOCKER_REGISTRY=localhost:5000

# =============================================================================
# 🧪 测试配置 - Development
# =============================================================================
TESTING=false
PYTEST_TIMEOUT=60
COVERAGE_THRESHOLD=50  # Lower threshold for development

# =============================================================================
# 🛠️ 开发工具配置
# =============================================================================
# Hot reloading
AUTO_RELOAD=true
WATCH_FILES=true

# 调试配置
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILER=true
DEBUG_SQL=true

# 开发数据种子
SEED_DATA=true
MOCK_EXTERNAL_APIS=true 
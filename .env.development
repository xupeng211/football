# 🔧 环境变量模板文件
# 复制此文件为相应的环境配置文件：
# cp env-templates/template.env .env.development
# cp env-templates/template.env .env.production
# cp env-templates/template.env .env.testing

# =================================
# 核心应用配置
# =================================
ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# =================================
# 数据库配置
# =================================
POSTGRES_DB=football_predict
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# 测试数据库
TEST_POSTGRES_DB=football_predict_test
TEST_DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${TEST_POSTGRES_DB}

# =================================
# 缓存配置
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# =================================
# 外部API配置
# =================================
# Football Data API
FOOTBALL_API_KEY=your-football-api-key
FOOTBALL_API_BASE_URL=https://api.football-data.org/v4

# 其他API密钥
OPENAI_API_KEY=your-openai-api-key
GOOGLE_ANALYTICS_ID=your-ga-id

# =================================
# 工作流配置
# =================================
PREFECT_API_URL=http://localhost:4200/api
PREFECT_SERVER_API_HOST=0.0.0.0
PREFECT_LOGGING_LEVEL=INFO

# =================================
# 监控和追踪
# =================================
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268
JAEGER_AGENT_HOST=localhost

# =================================
# 应用服务配置
# =================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# =================================
# 日志和调试
# =================================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_SQL_ECHO=false

# =================================
# 安全配置
# =================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# =================================
# 文件存储配置
# =================================
UPLOAD_PATH=./uploads
MODEL_ARTIFACTS_PATH=./models/artifacts
STATIC_FILES_PATH=./static

# =================================
# 性能配置
# =================================
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
QUERY_TIMEOUT=30
CACHE_TTL=3600

# =================================
# 特性开关
# =================================
ENABLE_BACKGROUND_TASKS=true
ENABLE_RATE_LIMITING=true
ENABLE_METRICS_COLLECTION=true
ENABLE_DEBUG_TOOLBAR=false

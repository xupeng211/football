# üèà Football Predict System - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =================== Core Application Settings ===================
ENVIRONMENT=development
APP_NAME=football-predict-system
APP_VERSION=3.0.0
DEBUG=true
LOG_LEVEL=INFO

# =================== Database Configuration ===================
DATABASE_URL=postgresql://user:password@localhost:5432/football_predict_db
DATABASE_MAX_CONNECTIONS=10
DATABASE_POOL_SIZE=5

# =================== Redis Configuration ===================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=30
REDIS_RETRY_ON_TIMEOUT=true

# =================== Football Data API ===================
FOOTBALL_DATA_API_KEY=your_api_key_here
FOOTBALL_DATA_BASE_URL=https://api.football-data.org/v4
FOOTBALL_DATA_RATE_LIMIT=10

# =================== Security Configuration ===================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =================== Cache Configuration ===================
CACHE_TTL_DEFAULT=300
CACHE_TTL_PREDICTIONS=1800
CACHE_TTL_TEAMS=86400
CACHE_TTL_MATCHES=3600

# =================== API Configuration ===================
API_V1_PREFIX=/api/v1
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60

# =================== Logging Configuration ===================
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =================== Feature Flags ===================
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# =================== Testing Configuration ===================
# (Used only when ENVIRONMENT=testing)
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_football_db
TEST_REDIS_URL=redis://localhost:6379/1

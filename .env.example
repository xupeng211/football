# 应用配置
APP_PORT=8000
API_HOST=127.0.0.1
API_DEBUG=false
API_SECRET_KEY=your-secret-key-here

# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sports
PG_PASSWORD=postgres

# Redis配置
REDIS_URL=redis://localhost:6379

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=console

# 模型配置
MODEL_VERSION=latest
MODEL_REGISTRY_PATH=./models/artifacts
MODEL_CACHE_SIZE=10

# 数据源配置（需要申请API密钥）
FOOTBALL_DATA_API_KEY=your-football-data-api-key-here
FOOTBALL_DATA_BASE_URL=https://api.football-data.org/v4

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
